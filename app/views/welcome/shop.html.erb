<div class="container">
  <section class="hgroup">
    <div class="col-md-6"></div>
    <%#= render 'welcome/search_form' %>
  </section>
  <section>
    <div class="row">
      <div id="leftcol" class="col-sm-8 col-md-8">
        <article class="post">
          <div class="post_content">
            <!-- <figure><%#= image_tag 'portfolio/p4.jpg' %></figure> -->
            <% if @pages.any? %>
              <% if current_admin_user %>
              <div class="alert alert-warning fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <%= link_to "Vezin în admin", admin_page_path(@page), target: :blank %> |
                <%= link_to "Editează pagina".html_safe, edit_admin_page_path(@page), target: :blank %>
              </div>
              <% end %>
            <%= raw(@page.text_1) if @page.present? %>
            <% else %>
              <%= render 'shared/nothing_found' %>
            <% end %>
          </div>
        </article>
        <% if @page.present? && @page.gallery.present? %>
        <div class="widget ads clearfix">
          <h4>Gallery</h4>
          <%= render 'shared/gallery', gallery: @page.gallery %>
        </div>
        <% end %>
      </div>
      <div id="sidebar" class="col-sm-4 col-md-4">
        <aside class="widget">
          <center>
            <%= image_tag 'geometry.jpg', class: 'img', style: "border: 1px solid;" %>
          </center>
          <% if @page.show_contacts %>
          <hr>
          <h4><center><%= t('menu.contacts') %></center></h4>
          <div class="col-md-12 col-sm-12">
            <%= render 'shared/contacts_shop' %>
            <%= render 'shared/contacts_accountant' %>
          </div>
          <% end %>
        </aside>
      </div>
    </div>
  </section>
</div>
