<div class="col-md-12">
  <div class="col-md-2">
    <ul class="nav nav-pills nav-stacked">
      <% @pages.each do |p| %>
      <li class="<%= 'active' if "#{p.link_name}" == @page.link_name %>"><%= link_to p.title, shop_path(p.link_name), title: p.title %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-6">
    <% if @pages.any? %>
      <% if current_admin_user %>
        <div class="alert alert-warning fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
          <%= link_to "Vezin în admin", admin_page_path(@page), target: :blank %> |
          <%= link_to "Editează pagina".html_safe, edit_admin_page_path(@page), target: :blank %>
        </div>
      <% end %>
      <%= raw(@page.text_1) if @page.present? %>
    <% else %>
      <%= render 'shared/nothing_found' %>
    <% end %>
    <% if @page.gallery.present? %>
      <div class="page-header">
        <h3><%= t('gallery').capitalize %> <small><%= @page.gallery.name %></small></h3>
      </div>
      <%= render 'shared/gallery', gallery: @page.gallery.name %>
    <% end %>

    <h3><%= t('shop.partners') %></h3>
    <hr>
    <div class="row">
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/1.jpg', class: 'img-responsive'), asset_path('logo/1.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'LEMFORDER' %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/2.jpg', class: 'img-responsive'), asset_path('logo/2.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'AIRTECH AIRSPRINGS' %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/3.jpg', class: 'img-responsive'), asset_path('logo/3.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'MAHLE ORIGINAL' %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/4.jpg', class: 'img-responsive'), asset_path('logo/4.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'BEHR' %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/5.jpg', class: 'img-responsive'), asset_path('logo/5.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'HELLA' %>
      </div>
      <div class="col-xs-6 col-md-4">
        <%= link_to image_tag('logo/6.jpg', class: 'img-responsive'), asset_path('logo/6.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'BPW' %>
      </div>
    </div>

  </div>
  <div class="col-md-4">
    <%= render 'shared/contacts_shop' %>
    <%= render 'shared/contacts_accountant' %>
    <%= render 'shared/sidebar' %>
  </div>
</div>
