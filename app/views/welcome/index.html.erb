<%#= render 'slider' %>
<div class="col-md-12">
  <div class="col-md-8">
    <div class="col-sm-12 col-md-12">
      <div class="thumbnail">
        <%= render 'slider' %>
        <div class="caption">
          <% if @page.present? %>
            <% if current_admin_user %>
              <div class="alert alert-warning fade in" role="alert">
                <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <%= link_to "Vezin în admin", admin_page_path(@page), target: :blank %> |
                <%= link_to "Editează pagina".html_safe, edit_admin_page_path(@page), target: :blank %>
              </div>
            <% end %>
            <%= raw(@page.text_1) %>
          <% end %>
          <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a></p> -->
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <%= image_tag 'parts.jpg' %>
        <div class="caption">
          <h3 class="blue"><center><%= t('t_and_t_service') %></center></h3>
          <p class="justify"><%= @page.text_2 %></p>
          <p><%= link_to t('details'), shops_path %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-md-6">
      <div class="thumbnail">
        <%= image_tag 'international.jpg' %>
        <div class="caption">
          <h3 class="blue"><center><%= t('int_transport') %></center></h3>
          <p class="justify"><%= @page.text_3 %></p>
          <p><%= link_to t('details'), transports_path %></p>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-4">
    <%= render 'shared/sidebar' %>
    <h3 class="blue"><%= t('index.clients') %></h3>
    <hr>
    <div class="row">
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/zorile.jpg', class: 'img-responsive'), asset_path('logo/companies/zorile.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'ZORILE S.A. - www.zorile.md' %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/gcc.jpg', class: 'img-responsive'), asset_path('logo/companies/gcc.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'GLASSCONTAINER COMPANY - www.gcc.md' %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/tirotex.jpg', class: 'img-responsive'), asset_path('logo/companies/tirotex.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'TIROTEX - www.tirotex.com' %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/nefis.jpg', class: 'img-responsive'), asset_path('logo/companies/nefis.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'NEFIS - www.nefis.md' %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/fidesco.jpg', class: 'img-responsive'), asset_path('logo/companies/fidesco.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'FIDESCO - www.fidesco.md' %>
      </div>
      <div class="col-xs-6 col-md-6">
        <%= link_to image_tag('logo/companies/bomba.jpg', class: 'img-responsive'), asset_path('logo/companies/bomba.jpg'),
                   class: 'thumbnail fancybox', rel: 'gallery1', title: 'BOMBA - www.bomba.md' %>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>

