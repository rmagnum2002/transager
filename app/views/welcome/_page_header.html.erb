<% if controller_name == 'contacts' && @settings.collapsing_header %>
  <div class="full_page_photo"><div id="map"></div></div>
<% elsif controller_name == 'welcome' && action_name == 'index' && @settings.collapsing_header %>
  <%= render 'slider' %>
<% elsif controller_name == 'posts' && (action_name == 'careers' || action_name == 'career') %>
<div class="full_page_photo small" style="background-image: url(<%= asset_path("careers_bg.jpg") %>);">
  <div class="container">
    <section class="call_to_action">
      <h3 class="animated bounceInDown"><strong><%= @post.present? ? @post.title : t(:career) %></strong></h3><br>
      <h4 class="animated bounceInUp skincolored">
        Fii parte a unei echipi de profesioni»ôti...
      </h4>
    </section>
  </div>
</div>
<% elsif @page %>
<div class="full_page_photo small" style="background-image: url(<%= @page.header_image? ? @page.header_image.url : asset_path("#{action_name}_bg.jpg") %>);">
  <div class="container">
    <section class="call_to_action">
      <h3 class="animated bounceInDown"><strong><%= @page.title if @pages.any?  %></strong></h3>
      <h4 class="animated bounceInUp skincolored">
        <%= @page.description.empty? ? t('header_slogan') : @page.description %>
      </h4>
    </section>
  </div>
</div>
<% end %>
