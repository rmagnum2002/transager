  <div class="table-responsive">
    <table class='table table-bordered table-striped table-hover table-condensed listing'>
      <thead>
        <tr>
          <th><%= t(:original_number) %></th>
          <th><%= t(:license_number) %></th>
          <th><%= t(:name) %></th>
          <!-- <th>Brand</th> -->
          <!-- <th>Category</th> -->
          <th><%= t(:price) %> (MDL)</th>
          <% if current_admin_user %>
          <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @parts.each_with_index do |p, index| %>
        <tr <%= "class='success'".html_safe if (p.name == @query || p.manufacturer_id.downcase == @query.downcase) %>>
          <td><%= p.manufacturer_id %></td>
          <td><%= p.seller_id if p.seller_id.present? %></td>
          <td class='part_details'>
            <%= link_to p.name, p, class: 'part_name', remote: true %>
            <ul class='stock'>
              <li id='Magazin_Chisinau_<%= p.internal_id %>'><%= t('warehouse.chisinau') %>: <span class="total"><%= t('not_available') %></span></li>
              <li id='Magazin_Balti_<%= p.internal_id %>'><%= t('warehouse.balti') %>: <span class="total"><%= t('not_available') %></span></li>
              <li id='Magazin_Comrat_<%= p.internal_id %>'><%= t('warehouse.comrat') %>: <span class="total"><%= t('not_available') %></span></li>
            </ul>
            <%#= link_to p.name, '#', class: 'part_name', data: {html: true, content: "
              <div class='col-md-12'>
                  <center>#{category_image(p)}</center>
                  <table class='table'>
                    <tr>
                      <td>#{t(:category)}</td>
                      <td>#{t(p.category_name)}</td>
                    </tr>
                    <tr>
                      <td>#{t(:price)}</td>
                      <td>#{p.price} lei</td>
                    </tr>
                    <tr>
                      <td>ID</td>
                      <td>#{p.manufacturer_id}<br> #{p.seller_id}</td>
                    </tr>
                  </table>
              </div>
              "}, title: "<b>#{p.name}</b>".html_safe %>
          </td>
          <!-- <td><%#= p.brand %></td> -->
          <!-- <td><%#= t(p.category_name) %></td> -->
          <td class="price text-right" id='price_<%= p.internal_id %>'><%= t('not_available') %></td>
          <% if current_admin_user %>
          <td><%= link_to 'edit', edit_admin_part_path(p), target: :blank %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <center><%= will_paginate @posts %></center>
<% else %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag parts_path, class: 'form search_form', role: 'form', method: :get do %>
      <div class="row">
        <div class="col-md-8">
          <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: t(:search_placeholder), data: {autocomplete_source: search_parts_path}, autofocus: true %>
        </div>
        <div class="col-md-4">
          <%= submit_tag t(:search), name: nil, class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
