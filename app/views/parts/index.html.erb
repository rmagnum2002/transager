<div class="container">
  <section class="hgroup">

    <div class="col-md-6">
      <h1><%= t('parts') %></h1>
    </div>
    <%= render 'welcome/search_form' %>
  </section>
  <section>
    <div class="panel"><%= @message.html_safe %></div>
    <div class="table-responsive">
      <table class='table table-bordered table-striped table-hover table-condensed'>
        <thead>
          <tr>
            <th>Manufacturer ID / Seller ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Price</th>
            <% if current_admin_user %>
            <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @parts.each_with_index do |p, index| %>
          <tr <%= "class='success'".html_safe if p.name == @query %>>
            <td><%= p.manufacturer_id %><%= " / #{p.seller_id}" if p.seller_id.present? %></td>
            <td><%= p.name %></td>
            <td><%= p.brand %></td>
            <td><%= p.price %></td>
            <% if current_admin_user %>
            <td><%= link_to 'edit', edit_admin_part_path(p), target: :blank %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <center><%= will_paginate @posts %></center>
  </section>
</div>
