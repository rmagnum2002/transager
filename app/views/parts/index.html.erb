<div class="container">
  <section class="hgroup">

    <div class="col-md-6">
      <h1><%= t('parts.title') %></h1>
    </div>
    <%= render 'welcome/search_form' if @parts.size > 0 %>
    <div class="clearfix"></div>
  </section>
  <section>
    <% if @parts.size > 0 %>
      <div class="panel"><%= @message.html_safe %></div>
      <div class="table-responsive">
        <table class='table table-bordered table-striped table-hover table-condensed'>
          <thead>
            <tr>
              <th>Manufacturer ID / Seller ID</th>
              <th>Name</th>
              <th>Brand</th>
              <th>Price</th>
              <% if current_admin_user %>
              <th></th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @parts.each_with_index do |p, index| %>
            <tr <%= "class='success'".html_safe if p.name == @query %>>
              <td><%= p.manufacturer_id %><%= " / #{p.seller_id}" if p.seller_id.present? %></td>
              <td><%= p.name %></td>
              <td><%= p.brand %></td>
              <td><%= t(p.category_name) %></td>
              <td><%= p.price %></td>
              <% if current_admin_user %>
              <td><%= link_to 'edit', edit_admin_part_path(p), target: :blank %></td>
              <% end %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <center><%= will_paginate @posts %></center>
    <% else %>
      <div class="col-md-6 col-md-offset-3">
        <%= form_tag parts_path, class: 'form search_form', role: 'form', method: :get do %>
          <div class="row">
            <div class="col-md-8">
              <%= text_field_tag :query, params[:query], class: 'form-control', placeholder: t(:search_placeholder), data: {autocomplete_source: search_parts_path}, autofocus: true %>
            </div>
            <div class="col-md-4">
              <%= submit_tag t(:search), name: nil, class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </section>
</div>
