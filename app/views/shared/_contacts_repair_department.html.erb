<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('department_id.service') %></h3>
  </div>
  <div class="panel-body phones">
    <table class="table">
      <tbody>
        <% Contact.where(department_id: 3).order('contact_type asc').each do |c| %>
        <tr>
          <td><%= t(Contact::CONTACT_TYPE.invert[c.contact_type]) %></td>
          <td><%= c.details %></td>
          <% if current_admin_user %>
          <td><%= link_to 'edit', admin_contact_path(c), target: :blank %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
