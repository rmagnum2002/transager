<div class="panel-heading">
  <h3 class="panel-title"><center><%= t('department_id.transport').titleize %></center></h3>
</div>
<div class="panel-body phones">
  <table class="table">
    <tbody>
      <% Contact.where(department_id: 1).order('contact_type asc').each do |c| %>
      <tr>
        <td><%= footer_li(c) %></td>
        <td><%= c.details %></td>
        <% if current_admin_user %>
        <td><%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, admin_contact_path(c), target: :blank %></td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
