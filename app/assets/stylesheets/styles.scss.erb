body{
  background: #fff;
  background: url('<%= asset_path 'map.gif' %>') no-repeat center center fixed;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

  a{text-decoration: none;transition: 0.20s;}
  .justify{text-align: justify;}
  .blue{color: #357ebd;}
  // h1.logo{
  //   position: absolute;
  //   margin-left: 100px;
  //   margin-top: 10px;
  //   small{
  //     margin-top: -5px;
  //     position: absolute;
  //     font-size: 15px;
  //     margin-left: 30px;
  //     color: #585858;
  //   }
  // }

  .dropdown{
    background: #fff;
    border: 1px solid gray;
    padding: 3px;
  }
  #container{
    max-width: 960px;
    margin: auto;
    border-left: 1px solid #357ebd;
    border-right: 1px solid #357ebd;
    -webkit-box-shadow: 1px 5px 17px 0px rgba(50, 50, 50, 0.78);
    -moz-box-shadow:    1px 5px 17px 0px rgba(50, 50, 50, 0.78);
    box-shadow:         1px 5px 17px 0px rgba(50, 50, 50, 0.78);
    background: #fff;
  }

  // header
  .header_title{
    padding: 45px 10px;
    background: #fff;
    margin-bottom: 1px;
    background: url('<%= asset_path 'header_bg.jpg' %>');
    background-repeat-x: no-repeat;
    background-size: 60%;
    background-position-x: right;
    background-repeat-y: no-repeat;
    background-position-y: -50px;

    div.logo{
      font-size: 30px;
      margin: 0 0 20px 55px;
      width: 320px;
      color: #0B5696;
      .title{font-weight: bolder; font-family: serif; font-style: italic;}
      span.capital{font-size: 40px;}
      div.quote{font-size: 15px;width:200px;margin-top: -15px;text-align: center;}
    }
  }
  ul.lang{list-style: none;}
  ul.lang a{color: #0B5696;}
  .slider_caption {
    font-size: 30px;
    font-weight: 900;
  }

  // Contacts page
  #map_canvas {
    width: 100%;
    height: 350px;
  }
  .contact_form{padding-bottom: 50px;}
  .phones{
    text-align: center;
    font-size: 12px;
    ul{list-style: none;padding: 0}
  }

  // footer
  .footer{
    background: #357ebd;
    color: #fff;
    padding: 25px 0;
    ul{list-style: none;}
    a{color: #fff;text-decoration: none;}
  }
}
